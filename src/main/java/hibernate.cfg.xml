<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="">
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/2014_aar</property>
		<property name="hibernate.connection.username">cebrus</property>
		<property name="hibernate.connection.password">nicolas@mysql2014</property>
		<property name="show_sql">true</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<!-- Mapping files -->
		<mapping class="evaluator.business.Media" resource="Media.hbm.xml" />
		<mapping class="evaluator.business.User" resource="User.hbm.xml" />
